  # "gluten-lwt-unix"
  # "httpaf"
  # "httpaf-lwt-unix"
  # "h2"
  # "h2-lwt-unix"
  # "hpack"
  # "websocketaf"

  # Dependencies of vendored packages.
  "angstrom" {>= "0.14.0"}
  "base64" {>= "3.0.0"}
  "bigstringaf" {>= "0.5.0"}  # h2.
  "digestif" {>= "0.7.2"}  # websocket/af, sha1, default implementation.
  "faraday" {>= "0.6.1"}
  "faraday-lwt-unix"
  "psq"  # h2.
  "result"  # http/af, websocket/af.
]

build: [
