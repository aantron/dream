  (name gluten_lwt)
  (public_name dream.gluten-lwt)
  (libraries
   dream.gluten
   lwt)))

(subdir gluten/lwt-unix
 (library
  (name gluten_lwt_unix)
  (public_name dream.gluten-lwt-unix)
  (libraries
   faraday-lwt-unix
   dream.gluten-lwt
   lwt.unix
   (select
    ssl_io.ml
    from
    (lwt_ssl -> ssl_io.real.ml)
    (-> ssl_io.dummy.ml))
   (select
    tls_io.ml
    from
    (tls.lwt -> tls_io.real.ml)
    (-> tls_io.dummy.ml)))
  (modules gluten_lwt_unix tls_io ssl_io)))



